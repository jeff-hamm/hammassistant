{
  "Logging": {
    "MinimumLevel": "Debug",
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning"
    },
    "ConsoleThemeType": "System"
  },
  "NetDaemon" {
    "ApplicationConfigurationFolder": "./Config"
  },
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Sinks.Console"
    ],
    "LevelSwitches": {
      "controlSwitch": "Debug"
    },
    "MinimumLevel": {
      "Default": "Debug",
      "ControlledBy": "$controlSwitch",
      "Override": {
        "NetDaemon.Extensions.MqttEntityManager": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}{Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}